<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="ar.edu.unq.epers.aterrizar.modelo.Busqueda" table="busqueda" >
        <id name="id" type="java.lang.Integer">
            <column name="ID_BUSQUEDA" />
            <generator class="identity" />
        </id>
        
	   	<bag name="criterios" table = "criterios" cascade="all" lazy= "false">
        	<key column = "ID_CRITERIOS"/>
        	<one-to-many class = "ar.edu.unq.epers.aterrizar.modelo.Criterios"/>
        </bag>
<!--  
        
	     <property name="orden" type="ar.edu.unq.epers.aterrizar.modelo.Orden" column="orden">
            <column name="ORDEN" />
        </property>
-->
    </class>
</hibernate-mapping>