        </subclass>
        
        <subclass name="ar.edu.unq.epers.aterrizar.modelo.CriterioAsientoPrimera" discriminator-value="crtAsPrmr">
        </subclass>
        
        <subclass name="ar.edu.unq.epers.aterrizar.modelo.CriterioDestino" discriminator-value="crtDstn">
        	<property name="nombreDestino" />
        </subclass>
        
        <subclass name="ar.edu.unq.epers.aterrizar.modelo.CriterioOrigen" discriminator-value="crtOrg">
        	<property name="nombreOrigen" />
        </subclass>
        
        <subclass name="ar.edu.unq.epers.aterrizar.modelo.CriterioFechaLLegada" discriminator-value="crtFchLlgd">
        </subclass>
        
         <subclass name="ar.edu.unq.epers.aterrizar.modelo.CriterioFechaSalida" discriminator-value="crtFchSld">
        </subclass>
        
