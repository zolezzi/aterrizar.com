    <class name="ar.edu.unq.epers.aterrizar.modelo.Criterios" table="criterios" >
		
		<id name="id" type= "java.lang.Integer">
			<column name="ID_CRITERIO"/>
			<generator class="identity"/>
		</id>
		
		<discriminator column="DISC" type="string"/>
        
